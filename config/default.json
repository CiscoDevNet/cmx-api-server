  "server": {
    // Should the web server start using HTTPS
    "doHttps": true,
    // Maximum number of async operations at a time
    "asyncLimit": 5000,
    // Number of seconds between logging summary information stats
    "logStatsInterval": 1800
  },
  "notifications": {
    // Web server port to listen for notifications
    "port": 9094,
    // Number of workers for the notification processing
    "workers": 5,
    // Number of seconds before removing notify sources if not updated
    "metricTtl": 1200,
    // Number of seconds before checking for notify sources to be removed
    "metricCheckInterval": 120
  },
  "restApi": {
    // Web server port to listen for REST APIs
    "port": 9095,
    // Number of workers for the REST API handling
    "workers": 7,
    // Number of seconds before removing REST sources if not updated
